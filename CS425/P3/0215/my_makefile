all: sender0215.o receiver0215.o
	gcc -g -Wall sender0215.o -o sender0215
	gcc -g -Wall receiver0215.o -o receiver0215

# $@ matches the target; $< matches the first dependent

receiver0215.o: receiver0215.c
	gcc -c $< -o receiver0215.o

sender0215.o: sender0215.c
	gcc -c $< -o sender0215.o
     
clean:
	rm sender0215 sender0215.o receiver0215 receiver0215.o